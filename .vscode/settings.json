{
    "workbench.colorTheme": "Quiet Light",
    "launch": {
        "configuration": [
            "externalConsole"
        ]
    },
    "[rust]": {
        "editor.detectIndentation": true,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },
    "rust-analyzer.cargo.features": [],
    "rust-analyzer.checkOnSave.command": "cargo check",
    "rust-analyzer.checkOnSave.features": [],
    "rust-analyzer.checkOnSave.enable": true,
    "rust-analyzer.checkOnSave.allTargets": false,
    "rust-analyzer.checkOnSave.target": "simulator",
    "rust-analyzer.checkOnSave.overrideCommand": [
        "cargo",
        "check",
        "--bin",
        "simulator",
        "--features",
        "docker",
        "--message-format=json"
    ],
    "rust-analyzer.callInfo.full": false,
    "rust-analyzer.cargo.allFeatures": false,
    "rust-analyzer.checkOnSave.allFeatures": true,
    "rust-analyzer.assist.importGranularity": "crate",
    "rust-analyzer.trace.server": "verbose",
    "rust-analyzer.trace.extension": true,
    "rust-analyzer.diagnostics.enableExperimental": false,
    //"rust-analyzer.inlayHints.maxLength": 5,
    "terminal.integrated.scrollback": 10000,
    "git.enableSmartCommit": true,
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    "editor.minimap.enabled": false,
    "editor.showFoldingControls": "always",
    "editor.acceptSuggestionOnCommitCharacter": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnType": false,
    "editor.defaultFormatter": "matklad.rust-analyzer",
    "editor.formatOnSave": true,
    "editor.tokenColorCustomizations": {
        "comments": "#666666"
    },
    "workbench.panel.defaultLocation": "bottom",
    "workbench.editor.enablePreview": false,
    "screencastMode.onlyKeyboardShortcuts": true,
    "workbench.sideBar.location": "left",
    "workbench.colorCustomizations": {
        "rust_analyzer.inlayHints.foreground": "#9C9C9C",
    },
    "workbench.editor.wrapTabs": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "window.zoomLevel": 1,
}